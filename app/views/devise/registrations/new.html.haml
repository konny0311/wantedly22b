%body.sign_all
  .header_sign_up
    %h2
      %img{alt: "Header logo loggedout", src: "https://de7iszmjjjuya.cloudfront.net/assets/beta/header-logo-loggedout-0d3e0bf2ed7533fe5ace8e585e3b6dafe93a13ec41f0f9c396d28435a35e9a6a.png"}/
  .main
    .main-all
      .main-body
        %h3 ３０秒でアカウント登録（無料です）
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            %span.f 名前
            = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '例：山田太郎', size: "40", style: "padding: 10px" 
          .field
            %span.f 性別
            = f.radio_button :gender, "0"
            男性
            = f.radio_button :gender, "1"
            女性
          .field
            %span.f 生年月日
            %select#birthday_year.select-btn{name: "birthday_year"}
              %option{label:  "", value: ""}
              %option{value:  "2008"} 2008
              %option{value:  "2007"} 2007
              %option{value:  "2006"} 2006
              %option{value:  "2005"} 2005
